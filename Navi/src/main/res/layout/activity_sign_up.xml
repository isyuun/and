<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/signup_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintRight_toRightOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        android:layout_marginRight="-20dp"
        android:layout_marginTop="-20dp"
        app:elevation="20dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="1dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/signup_iv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dogimage"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>
        
        <EditText
            android:id="@+id/signup_et_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signup_edit"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_cate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_name"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_cate"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/signup_tv_cate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signup_edit"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_birth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_cate"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_birth"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/signup_tv_birth_year"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signup_edit"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:id="@+id/signup_tv_birth_month"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signup_edit"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/signup_tv_birth_day"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signup_edit"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_birth"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_cate"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/signup_tv_male"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_signup_text_press"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/signup_gender_male"
            android:padding="8dp"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:id="@+id/signup_tv_female"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_signup_text_normal"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/signup_gender_female"
            android:padding="8dp"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signup_edit"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_gender"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_address"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/signup_tv_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signup_edit"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_chipnum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_address"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_chip_num"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

        <EditText
            android:id="@+id/signup_et_chipnum"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signup_edit"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>