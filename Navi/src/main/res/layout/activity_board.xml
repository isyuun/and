<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BoardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/board_iv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dogimage"/>

        <TextView
            android:id="@+id/board_tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Id"
            android:layout_toRightOf="@+id/board_iv_profile"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/board_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/board_tv_user_id"
            android:text="board title"
            android:textSize="18sp"
            android:fontFamily="@font/kmi_bold"
            android:layout_below="@+id/board_tv_user_id"
            android:layout_marginTop="10dp"/>






    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>