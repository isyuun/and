<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_iv_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/dog1"/>

    <TextView
        android:id="@+id/comment_tv_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kmi_bold"
        android:text="@string/userid"
        android:layout_toEndOf="@+id/comment_iv_profile"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/comment_tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/comment_tv_userid"
        android:layout_below="@+id/comment_tv_userid"
        android:layout_marginTop="4dp"
        android:text="@string/dummy_text"
        android:paddingEnd="12dp"/>


</RelativeLayout>