<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistActivity">


    <TextView
        android:id="@+id/reg_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="Create User"/>

    <LinearLayout
        android:id="@+id/reg_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/reg_tv_title"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reg_tv_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userId"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            />

        <EditText
            android:id="@+id/reg_et_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:ems="20"
            android:hint="Email"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="10dp"
            android:inputType="textEmailAddress"
            android:autofillHints="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/reg_linear1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reg_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userName"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            />

        <EditText
            android:id="@+id/reg_et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="18dp"
            android:ems="17"
            android:inputType="text"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/reg_linear2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reg_tv_userpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userPw"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            />

        <EditText
            android:id="@+id/reg_et_userpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="18dp"
            android:ems="19"
            android:inputType="textPassword"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/reg_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:layout_below="@+id/reg_linear3"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"/>

    <LinearLayout
        android:layout_below="@+id/reg_btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reg_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="result message"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/reg_tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="detail message"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/reg_tv_data_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data message"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/reg_tv_data_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/reg_tv_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="token"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>



    </LinearLayout>



</RelativeLayout>